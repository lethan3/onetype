{
  "name": "onetype",
  "displayName": "OneType",
  "description": "Allow only one user to type, useful for mocking ICPC-style competitions",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "onetype.hostSession",
        "title": "OneType: Host Session"
      },
      {
        "command": "onetype.joinSession",
        "title": "OneType: Join Session"
      },
      {
        "command": "onetype.leaveSession",
        "title": "OneType: Leave Session"
      },
      {
        "command": "onetype.requestAccess",
        "title": "OneType: Request Access"
      },
      {
        "command": "onetype.forceAccess",
        "title": "OneType: Force Take Access"
      },
      {
        "command": "onetype.giveAccess",
        "title": "OneType: Give Access to User"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "extensionDependencies": [
    "ms-vsliveshare.vsliveshare"
  ],
  "dependencies": {
    "vsls": "^1.0.4753"
  }
}
